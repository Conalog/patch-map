{
  "type": "module",
  "name": "@conalog/patch-map",
  "version": "0.6.1",
  "description": "This library utilizes pixi.js to provide a PATCH MAP tailored to the requirements of the PATCH service.",
  "license": "MIT",
  "author": "Conalog",
  "keywords": [],
  "homepage": "https://github.com/Conalog/patch-map#readme",
  "bugs": "https://github.com/Conalog/patch-map/issues",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Conalog/patch-map.git"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.cjs.js",
    "types": "./dist/types/src/patchmap.d.ts"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "umd": "dist/index.umd.js",
  "types": "dist/types/src/patchmap.d.ts",
  "scripts": {
    "build": "tsc && rollup -c",
    "format": "biome format",
    "lint": "biome check --staged",
    "lint:fix": "biome check --staged --write",
    "test:unit": "vitest --project unit",
    "test:browser": "vitest --browser=chromium",
    "test:headless": "vitest --browser.headless",
    "prepare": "husky",
    "release": "standard-version"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@pixi-essentials/bounds": "^3.0.0",
    "gsap": "^3.14.2",
    "is-plain-object": "^5.0.0",
    "jsonpath-plus": "^10.3.0",
    "nanoid": "^5.1.6",
    "pixi-viewport": "^6.0.3",
    "zod": "^3.25.67",
    "zod-validation-error": "^3.4.0"
  },
  "peerDependencies": {
    "pixi.js": ">=8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-url": "^8.0.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pixi.js": "^8.15.0",
    "playwright": "^1.57.0",
    "rollup": "^4.55.1",
    "rollup-plugin-copy": "^3.5.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
