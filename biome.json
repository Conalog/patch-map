{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist"]
	},
	"formatter": {
		"useEditorconfig": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": "warn",
				"noDebugger": "error",
				"noImportAssign": "error"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "warn",
				"noUnusedImports": "warn",
				"noConstructorReturn": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	}
}
