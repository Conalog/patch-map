{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules", "dist", "package-lock.json"]
  },
  "formatter": {
    "useEditorconfig": true,
    "ignore": ["package.json"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["package.json"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noDebugger": "error",
        "noImportAssign": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "warn",
        "noUnusedImports": "warn",
        "noConstructorReturn": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noThisInStatic": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
